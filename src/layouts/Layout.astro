---
import '../styles/global.css';
import { getWeatherForecast } from '../lib/weather';

interface Props {
	title: string;
    description?: string;
    seoTitle?: string;
    seoDescription?: string;
}

const { title, description, seoTitle, seoDescription } = Astro.props;
const siteTitle = seoTitle || title;
const metaDescription = seoDescription || description || "İzmir Uzmanı - İzmir Şehir Rehberi";
const weatherData = await getWeatherForecast();

const categories = ['Gezi', 'Yeme-İçme', 'Etkinlikler', 'Diğer'];
---

<!doctype html>
<html lang="tr">
	<head>
		<!-- Google tag (gtag.js) -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-V658W9RC55"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-V658W9RC55');
		</script>
		<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9624273383685060"
     crossorigin="anonymous"></script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logo.png" />
		<link rel="apple-touch-icon" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{siteTitle}</title>
		<meta name="description" content={metaDescription} />
		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={siteTitle} />
		<meta property="og:description" content={metaDescription} />
		<meta property="og:image" content={new URL("/instagram-preview.jpg", Astro.site)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={siteTitle} />
		<meta property="twitter:description" content={metaDescription} />
		<meta property="twitter:image" content={new URL("/instagram-preview.jpg", Astro.site)} />
	</head>
	<body>
		<!-- Mobile Menu Overlay -->
        <div id="mobile-menu" class="fixed inset-0 z-[100] bg-[#111111] translate-x-full transition-transform duration-300 md:hidden overflow-y-auto">
            <div class="flex flex-col h-full">
                <div class="flex items-center justify-between p-6 border-b border-white/10">
                    <img src="/logo.png" alt="Logo" class="h-12 w-auto object-contain brightness-0 invert" />
                    <button id="mobile-menu-close" class="p-2 text-white hover:bg-white/10 rounded-lg transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                    </button>
                </div>
                
                <nav class="flex flex-col p-8 gap-8">
                    <a href="/" class="text-3xl font-bold text-white hover:text-secondary transition">Anasayfa</a>
                    <div class="flex flex-col gap-6">
                        <a href="/blog" class="text-3xl font-bold text-white hover:text-secondary transition">Blog</a>
                        <div class="grid grid-cols-2 gap-4 pl-4">
                            {categories.map(cat => (
                                <a href={`/blog/kategori/${cat}`} class="text-sm font-bold text-white/60 hover:text-secondary transition uppercase tracking-widest">{cat}</a>
                            ))}
                        </div>
                    </div>
                    <a href="/etkinlikler" class="text-3xl font-bold text-white hover:text-secondary transition">Etkinlikler</a>
                    <a href="/iletisim" class="text-3xl font-bold text-white hover:text-secondary transition">İletişim</a>
                </nav>

                {Astro.url.pathname === '/' && (
                    <h1 class="sr-only">İzmir Uzmanı - İzmir Şehir Rehberi, Gezilecek Yerler ve Etkinlikler</h1>
                )}
                
                <div class="mt-auto p-8 border-t border-white/10">
                    <p class="text-sm text-white/50 mb-4 tracking-wider uppercase font-bold">Hava Durumu</p>
                    <div class="flex gap-4 overflow-x-auto no-scrollbar pb-2">
                         {weatherData.slice(0, 3).map((data) => (
                             <div class="bg-white/5 rounded-xl p-4 min-w-[100px] flex flex-col items-center gap-2">
                                 <span class="text-xs text-white/70">{data.day}</span>
                                 <span class="text-xl font-bold text-white">{data.temp}°</span>
                             </div>
                         ))}
                    </div>
                </div>
            </div>
        </div>
	<!-- Top Weather Bar -->
    <div class="bg-primary text-white text-xs py-2 border-b border-white/10 relative z-[60]">
        <div class="container mx-auto px-4 flex justify-between items-center overflow-x-auto no-scrollbar whitespace-nowrap gap-8">
            <div class="flex items-center gap-2 font-bold shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" /></svg>
                İzmir Haftalık Hava Durumu
            </div>
            <div class="flex gap-6">
                <!-- Weather Data -->
                {weatherData.map((data) => {
                    return (
                        <div class="flex items-center gap-1.5 opacity-90 sm:opacity-100">
                            <span class="font-medium text-white/80">{data.day}:</span>
                            <span class="font-bold flex items-center gap-1">
                                <span set:html={data.icon}></span>
                                {data.temp}°C
                            </span>
                        </div>
                    )
                })}
            </div>
        </div>
    </div>

    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md shadow-sm border-b border-gray-100">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <!-- Logo Left -->
            <a href="/" class="hover:opacity-80 transition flex items-center shrink-0">
                <img src="/logo.png" alt="İzmir Uzmanı" class="h-16 w-auto object-contain" />
            </a>
            
            <!-- Navigation Right -->
            <nav class="hidden md:flex gap-8 items-center">
                <a href="/" class="text-base font-bold text-gray-600 hover:text-primary uppercase tracking-wide transition relative group">
                    Anasayfa
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-secondary transition-all group-hover:w-full"></span>
                </a>

                <!-- Blog Dropdown -->
                <div class="relative group">
                    <a href="/blog" class="text-base font-bold text-gray-600 hover:text-primary uppercase tracking-wide transition flex items-center gap-1 group">
                        Blog
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                    </a>
                    
                    <!-- Dropdown Menu -->
                    <div class="absolute left-0 mt-2 w-56 bg-white border border-gray-100 rounded-lg shadow-xl py-3 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 translate-y-2 group-hover:translate-y-0 z-[100]">
                        <div class="grid grid-cols-1 gap-1">
                            {categories.map(cat => (
                                <a href={`/blog/kategori/${cat}`} class="block px-6 py-2 text-sm text-gray-600 hover:bg-primary/5 hover:text-primary transition font-bold">
                                    {cat}
                                </a>
                            ))}
                            <div class="border-t border-gray-50 my-2 mx-4"></div>
                            <a href="/blog" class="block px-6 py-1 text-xs text-primary hover:text-secondary transition font-black uppercase tracking-widest italic">
                                Tüm Yazılar →
                            </a>
                        </div>
                    </div>
                </div>

                <a href="/etkinlikler" class="text-base font-bold text-gray-600 hover:text-primary uppercase tracking-wide transition relative group">
                    Etkinlikler
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-secondary transition-all group-hover:w-full"></span>
                </a>

                <a href="/iletisim" class="text-base font-bold text-gray-600 hover:text-primary uppercase tracking-wide transition relative group">
                    İletişim
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-secondary transition-all group-hover:w-full"></span>
                </a>
            </nav>

            <!-- Mobile Hamburger -->
            <button id="mobile-menu-open" class="md:hidden p-2 text-dark hover:bg-gray-100 rounded-lg transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </header>

    <main class="flex-grow">
        <slot />
    </main>

    <footer class="bg-dark text-white pt-16 pb-8 border-t border-gray-800 mt-12">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
                <!-- Branding -->
                <div>
                    <div class="mb-6">
                        <img src="/logo.png" alt="İzmir Uzmanı" class="h-14 w-auto object-contain brightness-0 invert" />
                    </div>
                    <p class="text-gray-400 leading-relaxed">
                        İzmir'in en kapsamlı şehir rehberi. Gezilecek yerler, tadılacak lezzetler ve kaçırılmayacak etkinlikler burada.
                    </p>
                </div>

                <!-- Legal Links -->
                <div>
                    <h4 class="text-lg font-bold text-white mb-6 border-b border-gray-700 pb-2 inline-block">Kurumsal</h4>
                    <ul class="space-y-3">
                         {[
                             { name: 'Hakkımızda', href: '/hakkimizda' },
                             { name: 'Gizlilik Politikası', href: '/gizlilik-politikasi' },
                             { name: 'Çerez Politikası', href: '/cerez-politikasi' },
                             { name: 'Kullanım Koşulları', href: '/kullanim-kosullari' }
                         ].map((item) => (
                                <li>
                                    <a href={item.href} class="text-gray-400 hover:text-secondary transition flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                                        {item.name}
                                    </a>
                                </li>
                        ))}
                    </ul>
                </div>

                <!-- Contact -->
                <div>
                    <h4 class="text-lg font-bold text-white mb-6 border-b border-gray-700 pb-2 inline-block">İletişim</h4>
                    <ul class="space-y-4 text-gray-400">
                        <li class="flex items-start gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                            <span>İzmir, Türkiye</span>
                        </li>
                        <li class="flex items-center gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                            <a href="mailto:merhaba@izmiruzmani.com" class="hover:text-white transition">merhaba@izmiruzmani.com</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="border-t border-gray-800 pt-8 text-center text-sm text-gray-500 flex flex-col md:flex-row justify-between items-center gap-4">
                <p>&copy; {new Date().getFullYear()} İzmir Uzmanı. Tüm hakları saklıdır.</p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/gizlilik-politikasi" class="hover:text-white transition">Gizlilik Politikası</a>
                    <a href="/kullanim-kosullari" class="hover:text-white transition">Kullanım Şartları</a>
                    <a href="/cerez-politikasi" class="hover:text-white transition">Çerez Politikası</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Cookie Consent Banner -->
    <div id="cookie-banner" class="fixed bottom-6 left-6 right-6 md:right-auto md:left-6 md:max-w-md bg-white rounded-2xl shadow-2xl border border-gray-100 p-6 z-[200] transform transition-all duration-500 translate-y-20 opacity-0 hidden">
        <div class="flex flex-col gap-4">
            <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-primary/10 text-primary flex items-center justify-center shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a10 10 0 1 0 10 10 4 4 0 0 1-5-5 4 4 0 0 1-5-5"></path><path d="M8.5 8.5v.01"></path><path d="M16 15.5v.01"></path><path d="M12 12v.01"></path><path d="M11 17v.01"></path><path d="M7 14v.01"></path></svg>
                </div>
                <div class="flex-grow">
                    <h5 class="font-bold text-dark mb-1">Çerez Politikası</h5>
                    <p class="text-sm text-gray-500 leading-relaxed">
                        Sizlere daha iyi bir deneyim sunmak için çerezleri kullanıyoruz.
                    </p>
                </div>
            </div>
            <div class="flex items-center gap-3">
                <a href="/cerez-politikasi" class="text-xs font-bold text-gray-400 hover:text-primary transition underline decoration-dotted underline-offset-4">Detaylı Bilgi</a>
                <button id="accept-cookies" class="flex-grow py-3 bg-primary text-white font-bold rounded-xl hover:bg-primary/90 transition shadow-lg shadow-primary/20">Kabul Et</button>
            </div>
        </div>
    </div>
	</body>
</html>

<script>
    const openBtn = document.getElementById('mobile-menu-open');
    const closeBtn = document.getElementById('mobile-menu-close');
    const menu = document.getElementById('mobile-menu');

    if (openBtn && closeBtn && menu) {
        openBtn.addEventListener('click', () => {
            menu.classList.remove('translate-x-full');
            document.body.style.overflow = 'hidden';
        });

        closeBtn.addEventListener('click', () => {
            menu.classList.add('translate-x-full');
            document.body.style.overflow = '';
        });
    }

    // Cookie Consent Logic
    const cookieBanner = document.getElementById('cookie-banner');
    const acceptBtn = document.getElementById('accept-cookies');

    if (cookieBanner && acceptBtn) {
        const cookiesAccepted = localStorage.getItem('cookies-accepted');
        
        if (!cookiesAccepted) {
            cookieBanner.classList.remove('hidden');
            setTimeout(() => {
                cookieBanner.classList.remove('translate-y-20', 'opacity-0');
            }, 100);
        }

        acceptBtn.addEventListener('click', () => {
            localStorage.setItem('cookies-accepted', 'true');
            cookieBanner.classList.add('translate-y-20', 'opacity-0');
            setTimeout(() => {
                cookieBanner.classList.add('hidden');
            }, 500);
        });
    }
</script>
