---
import Layout from '../../../layouts/Layout.astro';
import db from '../../../lib/db';

export async function getStaticPaths() {
  const categories = ['Yeme-İçme', 'Etkinlikler', 'Gezi', 'Sanat', 'Gece Hayatı', 'Diğer', 'Oteller', 'Müzeler'];
  return categories.map(cat => ({
    params: { category: cat },
    props: { categoryName: cat }
  }));
}

const { category } = Astro.params;
const categoryName = category as string;

// Fetch posts filtered by category
const result = await db.execute({
  sql: 'SELECT * FROM posts WHERE category = ? ORDER BY created_at DESC',
  args: [categoryName]
});
const posts = result.rows as any[];
---

<Layout title={`${categoryName} - İzmir Uzmanı`}>
  <div class="bg-primary/5 py-16 text-center">
    <div class="container mx-auto px-4">
        <span class="inline-block px-4 py-1.5 bg-primary/10 text-primary rounded-full text-xs font-black uppercase tracking-widest mb-4">Kategori</span>
        <h1 class="text-4xl md:text-5xl font-black text-dark mb-4">{categoryName}</h1>
        <p class="text-gray-500 max-w-2xl mx-auto font-medium">"{categoryName}" kategorisindeki en güncel içerikler ve rehberler.</p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
            <article class="bg-white rounded-card overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 group flex flex-col h-full border border-gray-100">
                <div class="h-56 bg-gray-100 relative overflow-hidden shrink-0">
                    <img src={post.image || `https://picsum.photos/seed/${post.id}/800/600`} alt={post.title} class="w-full h-full object-cover group-hover:scale-110 transition duration-700" />
                    <div class="absolute top-4 left-4">
                        <span class="px-3 py-1 bg-white/95 backdrop-blur-sm rounded-full text-[10px] font-black text-primary shadow-sm uppercase tracking-wider">{post.category}</span>
                    </div>
                </div>
                <div class="p-6 flex flex-col flex-grow">
                    <div class="flex items-center gap-2 mb-4 text-[10px] text-gray-400 uppercase tracking-widest font-bold">
                        <span>{new Date(post.created_at).toLocaleDateString('tr-TR', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
                    </div>
                    <h3 class="text-xl font-black text-dark mb-3 group-hover:text-primary transition line-clamp-2 leading-tight">{post.title}</h3>
                    <p class="text-gray-500 line-clamp-3 mb-6 flex-grow text-sm leading-relaxed">{post.excerpt}</p>
                    <a href={`/blog/${post.slug}`} class="inline-flex items-center gap-2 px-6 py-3 bg-gray-50 text-dark rounded-btn text-xs font-black uppercase tracking-widest hover:bg-primary hover:text-white transition-all w-fit shadow-sm">
                        Devamını Oku
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                    </a>
                </div>
            </article>
        ))}
        {posts.length === 0 && (
            <div class="col-span-full py-20 text-center">
                <div class="w-20 h-20 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>
                </div>
                <h2 class="text-xl font-bold text-dark mb-2">Henüz yazı bulunmuyor.</h2>
                <p class="text-gray-400">Bu kategoride henüz yayınlanmış bir içerik yok. Yakında eklenecektir!</p>
                <a href="/blog" class="inline-block mt-8 text-primary font-bold hover:underline italic">Tüm yazılara göz at &rarr;</a>
            </div>
        )}
    </div>
  </div>
</Layout>
