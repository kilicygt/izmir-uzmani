---
import Layout from '../../layouts/Layout.astro';
import db from '../../lib/db';

if (!Astro.cookies.has('admin_session')) {
  return Astro.redirect('/admin/login');
}

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get('action');
    const id = formData.get('id');

    if (action === 'delete' && id) {
      await db.execute({
        sql: 'DELETE FROM posts WHERE id = ?',
        args: [id]
      });
      return Astro.redirect('/admin/dashboard?deleted=true');
    }
  } catch (e: any) {
    console.error('Silme hatası:', e.message);
  }
}

const result = await db.execute('SELECT * FROM posts ORDER BY created_at DESC');
const posts = result.rows as any[];

const categories = ['Yeme-İçme', 'Etkinlikler', 'Gezi', 'Sanat', 'Gece Hayatı', 'Diğer'];
---

<Layout title="Admin Panel">
  <div class="container mx-auto px-4 py-12 max-w-6xl">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h1 class="text-4xl font-black text-dark tracking-tight">İçerik Yönetimi</h1>
            <p class="text-gray-500 mt-2 font-medium">Toplam {posts.length} yazı bulunmaktadır.</p>
        </div>
        <div class="flex gap-4">
             <a href="/admin/editor/new" class="px-8 py-4 bg-primary text-white font-black uppercase text-xs tracking-widest rounded-btn hover:bg-secondary transition-all shadow-xl hover:shadow-primary/20 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4" /></svg>
                Yeni Yazı Ekle
            </a>
            <button onclick="document.cookie='admin_session=; path=/; expires=Thu, 01 Jan 1970 00:00:01 GMT;'; location.href='/admin/login';" class="px-6 py-4 bg-gray-100 text-gray-500 font-bold uppercase text-[10px] tracking-widest rounded-btn hover:bg-red-50 hover:text-red-500 transition-all">Sistemden Çık</button>
        </div>
    </div>

    <!-- System Status & Warning -->
    <div id="system-status" class="hidden mb-12">
        <div class="bg-gradient-to-r from-gray-900 to-gray-800 text-white p-6 rounded-card shadow-xl border border-gray-700 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 rounded-full blur-3xl -mr-32 -mt-32 pointer-events-none"></div>
            
            <h2 class="text-lg font-bold mb-6 flex items-center gap-2 relative z-10">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                Sistem Durumu & Depolama
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 relative z-10">
                <!-- Blob Storage -->
                <div>
                    <div class="flex justify-between items-end mb-2">
                        <span class="text-sm text-gray-400 font-medium">Görsel Depolama (Vercel Blob)</span>
                        <span class="text-xs font-black bg-white/10 px-2 py-1 rounded text-white" id="blob-text">...</span>
                    </div>
                    <div class="w-full bg-white/10 rounded-full h-2.5 overflow-hidden">
                        <div id="blob-bar" class="bg-primary h-2.5 rounded-full transition-all duration-1000" style="width: 0%"></div>
                    </div>
                    <p class="text-[10px] text-gray-500 mt-2">Toplam 250MB alanınız bulunmaktadır.</p>
                </div>

                <!-- Database -->
                <div>
                    <div class="flex justify-between items-end mb-2">
                        <span class="text-sm text-gray-400 font-medium">Veritabanı (Turso)</span>
                        <span class="text-xs font-black bg-white/10 px-2 py-1 rounded text-white" id="db-text">...</span>
                    </div>
                    <div class="w-full bg-white/10 rounded-full h-2.5 overflow-hidden">
                        <div id="db-bar" class="bg-emerald-500 h-2.5 rounded-full transition-all duration-1000" style="width: 0%"></div>
                    </div>
                    <p class="text-[10px] text-gray-500 mt-2">Toplam 9GB alanınız bulunmaktadır.</p>
                </div>
            </div>

            <!-- Warning Alert (Hidden by default) -->
            <div id="storage-warning" class="hidden mt-6 p-4 bg-red-500/20 border border-red-500/50 rounded-lg flex items-start gap-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                <div>
                    <h4 class="font-bold text-red-100 mb-1">Depolama Alanı Dolmak Üzere!</h4>
                    <p class="text-xs text-red-200/80">Görsel depolama alanınız kritik seviyeye ulaştı (%80+). Lütfen gereksiz görselleri silin veya üst pakete geçiş yapın.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        {categories.slice(0, 4).map(cat => (
             <div class="bg-white p-6 rounded-card shadow-lg border border-gray-100">
                <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest">{cat}</span>
                <p class="text-3xl font-black text-dark mt-1">{posts.filter(p => p.category === cat).length}</p>
            </div>
        ))}
    </div>

    <div class="bg-white rounded-card shadow-2xl border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-100">
                        <th class="px-6 py-5 text-[10px] font-black text-gray-400 uppercase tracking-widest">Yazı</th>
                        <th class="px-6 py-5 text-[10px] font-black text-gray-400 uppercase tracking-widest">Kategori</th>
                        <th class="px-6 py-5 text-[10px] font-black text-gray-400 uppercase tracking-widest text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    {posts.map((post) => (
                        <tr class="hover:bg-gray-50/50 transition-colors group">
                            <td class="px-6 py-5">
                                <div class="flex items-center gap-4">
                                     <div class="w-12 h-12 rounded-lg bg-gray-100 flex-shrink-0 overflow-hidden border border-gray-100">
                                        <img src={post.image || `https://picsum.photos/seed/${post.id}/100/100`} class="w-full h-full object-cover" />
                                    </div>
                                    <div>
                                        <h3 class="font-bold text-dark group-hover:text-primary transition line-clamp-1">{post.title}</h3>
                                        <p class="text-[10px] text-gray-400 font-medium mt-1 uppercase tracking-tight">Kalıcı Bağlantı: /blog/{post.slug}</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-5">
                                <span class="px-3 py-1 bg-primary/5 text-primary text-[10px] font-black uppercase rounded-full tracking-wider">
                                    {post.category}
                                </span>
                            </td>
                            <td class="px-6 py-5 text-right">
                                <div class="flex justify-end gap-2">
                                    <a href={`/admin/editor/${post.id}`} class="p-2 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-600 hover:text-white transition-all">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                                    </a>
                                    <button class="p-2 bg-red-50 text-red-500 rounded-lg hover:bg-red-500 hover:text-white transition-all delete-post-btn" data-id={post.id} data-title={post.title}>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v2m3 4h.01" /></svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </div>
    </div>
  </div>

  <form id="delete-form" method="POST" style="display: none;">
    <input type="hidden" name="action" value="delete" />
    <input type="hidden" name="id" id="delete-id" />
  </form>
</Layout>

<script is:inline>
  document.querySelectorAll('.delete-post-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const id = btn.getAttribute('data-id');
      const title = btn.getAttribute('data-title');
      
      if (confirm(`"${title}" başlıklı yazıyı silmek istediğinize emin misiniz?`)) {
        document.getElementById('delete-id').value = id;
        document.getElementById('delete-form').submit();
      }
    });
  });

  // Fetch System Stats
  async function loadStats() {
    try {
        const res = await fetch('/api/admin/stats');
        const data = await res.json();
        
        if (data && !data.error) {
            document.getElementById('system-status').classList.remove('hidden');
            
            // Format Bytes
            const formatBytes = (bytes) => {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            };

            // Update Blob
            const blobPercent = Math.min(data.blob.percentage, 100);
            document.getElementById('blob-bar').style.width = blobPercent + '%';
            document.getElementById('blob-text').textContent = `${formatBytes(data.blob.used)}`;
            
            // Critical Warning (> 80%)
            if (blobPercent > 80) {
                document.getElementById('storage-warning').classList.remove('hidden');
                document.getElementById('blob-bar').classList.remove('bg-primary');
                document.getElementById('blob-bar').classList.add('bg-red-500');
            }

            // Update DB
            const dbPercent = Math.min(data.db.percentage, 100);
            document.getElementById('db-bar').style.width = dbPercent + '%';
            document.getElementById('db-text').textContent = `${formatBytes(data.db.used)}`;
        }
    } catch (e) {
        console.error('Stats loading failed', e);
    }
  }

  // Load on start
  loadStats();
</script>
